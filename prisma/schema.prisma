// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Lokalt: SQLite (nemt at komme i gang med)
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/*
  NOTE:
  - I produktion (Vercel) bør du bruge Postgres/MySQL.
  - Skift da 'provider' til "postgresql" og sæt en rigtig DATABASE_URL i Vercel.
*/

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relation til profil (valgfri – en bruger kan have 0/1 profil)
  profile      Profile?
}

model Profile {
  id        String   @id @default(cuid())
  name      String
  age       Int?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Knyt evt. profilen til en bruger (valgfrit)
  userId String?  @unique
  user   User?    @relation(fields: [userId], references: [id])
}
